{
    "name": "ymmersion",
    "version": "1.0.0",
    "main": "/wp-content/themes/ymmersion/assets/js/main.js",
    "license": "MIT",
    "scripts": {
        "start": "ddev start && ddev launch && npm run sass",
        "stop": "ddev stop",
        "tailwind": "npx tailwindcss -i ./wp-content/themes/ymmersion/src/input.css -o ./wp-content/themes/ymmersion/src/output.css --watch",
        "sass": "sass --watch --style compressed ./wp-content/themes/ymmersion/assets/scss/global.scss:./wp-content/themes/ymmersion/assets/css/global.min.css",
        "sort:css": "npx postcss --no-map --replace ./wp-content/themes/ymmersion/assets/scss/part/*.scss",
        "db:export": "ddev export-db -f db.sql"
    },
    "dependencies": {
        "sass": "^1.69.5"
    },
    "devDependencies": {
        "tailwindcss": "^3.4.14"
    }
}
